{
  "name": "@dobe0002/umn-web-template-react",
  "version": "1.0.0",
  "private": true,
  "main": "compiled/bundle.js",
  "repository": "https://github.com/dobe0002/umn-web-template-react",
  "publishConfig": {
    "registry": "https://npm.pkg.github.com/"
  },
  "peerDependencies": {
    "react": "^16.10.1",
    "react-dom": "^16.10.1"
  },
  "devDependencies": {
    "@babel/preset-react": "^7.10.1",
    "bootstrap": "^4.5.0",
    "enzyme": "^3.11.0",
    "enzyme-adapter-react-16": "^1.15.2",
    "enzyme-to-json": "^3.5.0",
    "eslint-config-airbnb": "^18.1.0",
    "eslint-config-prettier": "^6.11.0",
    "eslint-plugin-jsx-a11y": "^6.2.3",
    "eslint-plugin-prettier": "^3.1.3",
    "eslint-watch": "^7.0.0",
    "jest-axe": "3.4.0",
    "husky": "^4.2.5",
    "lint-staged": "^10.2.7",
    "node-sass": "^4.14.1",
    "prettier": "2.0.5",
    "react": "^16.10.1",
    "react-dom": "^16.10.1",
    "styled-components": "^4.4.0",
    "prop-types": "15.7.2",
    "react-scripts": "3.4.1",
    "sass": "^1.3.0",
    "stylelint": "^13.5.0",
    "stylelint-config-prettier": "^8.0.1",
    "webpack-cli": "^3.3.11"
  },
  "scripts": {
    "start": "react-scripts start",
    "build": "react-scripts build",
    "buildCompiled": "webpack --mode production --config componentBuild.config.js",
    "test": "react-scripts test --coverage --watchAll=false",
    "test:watch": "react-scripts test ",
    "test:update": "npm run test -- -u",
    "----------------------------------------------------------1": "",
    "lint": "npm run lint:js && npm run prettier:all && npm run lint:scss:all",
    "lint:fix": "npm run lint:js:fix && npm run prettier:fix:all && npm run lint:scss:fix:all",
    "----------------------------------------------------------2": "",
    "lint:js": "esw --ext .jsx,.js --color ",
    "lint:js:fix": "npm run lint:js -- --fix",
    "prettier": "prettier  --ignore-path ./.eslintignore --check",
    "prettier:all": "npm run prettier '**/*.+(js|jsx|html|css|scss|json)'",
    "prettier:fix": "prettier  --ignore-path ./.eslintignore --write",
    "prettier:fix:all": "npm run prettier:fix '**/*.+(js|jsx|html|css|scss|json)'",
    "lint:scss": "stylelint --ignore-path ./.eslintignore ",
    "lint:scss:all": "npm run lint:scss './**/*.+(css|scss)'",
    "lint:scss:fix:all": "npm run lint:scss -- --fix './**/*.+(css|scss)'",
    "----------------------------------------------------------3": "",
    "buildPackage": "npm run build && npm pack",
    "checkCoverage": "node ./utils/testCoverage.js",
    "npmAudit": "npm audit --audit-level=high" 
  },
  "prettier": {
    "singleQuote": true,
    "jsxSingleQuote": true,
    "printWidth": 80
  },
  "eslintConfig": {
    "extends": [
      "airbnb",
      "airbnb/hooks",
      "prettier"
    ],
    "globals": {
      "styles": true
    },
    "env": {
      "browser": true,
      "commonjs": true,
      "jest": true,
      "es6": true,
      "jquery": true
    },
    "parser": "babel-eslint",
    "plugins": [
      "prettier",
      "eslint-plugin-react"
    ],
    "rules": {
      "prettier/prettier": "error",
      "no-var": "error",
      "curly": "error",
      "one-var": "error",
      "no-console": "error"
    }
  },
  "stylelint": {
    "extends": "stylelint-config-prettier"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "jest": {
    "collectCoverageFrom": [
      "src/**/*.{js,jsx,ts,tsx}",
      "!<rootDir>/node_modules/",
      "!<rootDir>/src/index.jsx",
      "!<rootDir>/src/setupTests.js",
      "!<rootDir>/src/App.jsx"
    ],
    "coverageReporters": [
      "html",
      "json-summary"
    ],
    "snapshotSerializers": ["enzyme-to-json/serializer"]
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  }
}
